/dts-v1/;

#include "rk3328.dtsi"
#include "rk3328-evb.dtsi"
#include "rk3328-box-plus-dram-timing.dtsi"
#include "rk-stb-keymap.dtsi"

/ {
	io-domains {
		vccio6-supply = <&rk805_ldo1_reg>;
	};

	leds {
		compatible = "gpio-leds";

		power-green {
			gpios = <&rk805 0 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "none";
			default-state = "on";
			mode = <0x23>;
		};

		net-green {
			gpios = <&gpio2 GPIO_B7 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "none";
			default-state = "off";
			mode = <0x05>;
		};

		net-red {
			gpios = <&rk805 1 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "none";
			default-state = "on";
			mode = <0x05>;
		};

		ir {
			gpios = <&gpio2 GPIO_C2 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "ir";
			default-state = "off";
			mode = <0x00>;
		};
	};

	wireless-wlan {
		wifi_chip_type = "rtl8822bs";
		WIFI,poweren_gpio = <&gpio3 GPIO_B0 GPIO_ACTIVE_HIGH>;
		WIFI,host_wake_irq = <&gpio3 GPIO_A1 GPIO_ACTIVE_HIGH>;
	};

	wireless-bluetooth {
		pinctrl-0 = <&uart2m1_xfer>;
		BT,power_gpio = <&gpio1 GPIO_D0 GPIO_ACTIVE_HIGH>;
		BT,wake_gpio = <&gpio2 GPIO_C7 GPIO_ACTIVE_HIGH>;
		BT,wake_host_irq = <&gpio1 GPIO_D2 GPIO_ACTIVE_HIGH>;
		status = "disabled";
	};
};

&clk_core_dvfs_table {
	operating-points = <
		/* KHz	uV */
		408000	950000
		600000	950000
		816000	1000000
		1008000	1100000
		1200000	1225000
		1296000	1300000
		1392000	1350000
		1512000	1350000
		>;
	status = "okay";
};

&gmac2io {
	reset-gpio = <&gpio2 GPIO_C1 GPIO_ACTIVE_LOW>;
	phy-mode = "rgmii";
	pinctrl-0 = <&rgmiim1_pins>;
	clock_in_out = "input";
	tx_delay = <0x26>;
	status = "okay";
};

&gmac2phy {
	status = "disabled";
};

&sdio {
	status = "disabled";
};

&sdmmc_ext {
	/delete-property/ supports-sd;
	/delete-property/ broken-cd;
	/delete-property/ card-detect-delay;
	/delete-property/ power-inverted;

	clock-frequency = <150000000>;
	clock-freq-min-max = <200000 150000000>;
	supports-sdio;
	ignore-pm-notify;
	keep-power-in-suspend;
	cap-sdio-irq;
	supports-UHS_SDR104;
	status = "okay";
};

&spdif {
	pinctrl-0 = <&spdifm0_tx>;
	status = "okay";
};

&uart0 {
	status = "disabled";
};

&usb2_otg {
	/* 0 - Normal, 1 - Force Host, 2 - Force Device */
	rockchip,usb-mode = <1>;
};

&pinctrl {
	pinctrl-names = "default";
	pinctrl-0 = <&clk_32k_out>;

	clk_32k {
		clk_32k_out: clk-32k-out {
			rockchip,pins =
				<1 GPIO_D4 RK_FUNC_1 &pcfg_pull_none>;
		};
	};
};
